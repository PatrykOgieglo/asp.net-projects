@using myTarantulas.Domain.Entities
@model IEnumerable<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSearch.cshtml";
}

<div class="search-users">
    @if (Model.Count() != 0)
    {
        foreach (var user in Model)
        {
            <div class="user-box">
                <div class="user-box-username">
                    @user.Username
                </div>
                <div class="user-box-fb">
                    Fb or email: @user.WebOrFb
                </div>
                <div class="user-box-show">
                    <a href="@Url.Action("Index", "Profile", new { profileID = user.UserID })" class="profile-button">
                        Profile
                    </a>
                </div>
            </div>
        }
    }  
</div>




