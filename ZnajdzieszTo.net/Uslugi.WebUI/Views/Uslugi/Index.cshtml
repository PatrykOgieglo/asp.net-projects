@using Uslugi.Domain.Entities
@model IEnumerable<Offer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Uslugi.cshtml";
}

@foreach (var offer in Model)
{
    <div class="uslugi-box">
        <div class="uslugi-box-name">
            @offer.Name
        </div>
        <div class="uslugi-box-category">
            Kategoria: @offer.Category
        </div>
        <div class="uslugi-box-city">
            Miejscowość: @offer.City
        </div>
    </div>
}
